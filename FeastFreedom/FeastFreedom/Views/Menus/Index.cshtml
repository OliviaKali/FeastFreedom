@model IEnumerable<FeastFreedom.Models.Menu>

@{
    ViewBag.Title = "Index";
     Layout = "_CustomLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>

    <h2>@Session["KitchenName"]</h2>

    <button class="btn btn-default">
        @Html.ActionLink("Create New", "Create")
    </button>

    <table class="table">
        <tr>
            <th>
                Menu Item Name
            </th>
            <th>
                Vegetarian
            </th>
            <th>
                Price
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Kitchen.KitchenName)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Veg_NoVeg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuItemPrice)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Kitchen.KitchenName)
                    </td>*@
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.MenuItemID }) |*@
                    @*@Html.ActionLink("Details", "Details", new { id = item.MenuItemID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.MenuItemID })
                </td>
            </tr>
        }

    </table>

</body>

</html>