@model FeastFreedom.Models.Menu

@{
    Layout = "_CustomLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }

        .marginTop {
            margin-top: 30px;
        }
    </style>
</head>
<body>


    <h4 class="marginTop">Thank you for submitting a menu item at @Session["KitchenName"]. Would you like to add another item to your menu?</h4>

    <div centerBtn>
        <button class="btn btn-default">@Html.ActionLink("Add Menu Item", "Create")</button>
    </div>
    <hr />

    @if (@Session["LoginKitchenID"] != null)
    {
        <button class="btn btn-default">
            @Html.ActionLink("View Menu Item List", "Index")
        </button>
    }


</body>

</html>