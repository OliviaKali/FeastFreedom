@model FeastFreedom.Models.Order

@{
    ViewBag.Title = "Create";
    Layout = "_CustomLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <style>


        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>

    <h1 class="centerText">Checkout Page</h1>

    <h2>
        Thank you for shopping with Feast Freedom at @Session["KitchenName"].

    </h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />

            <div class="col-md-8">
                <h4>
                    Would you like to confirm you order at @Session["KitchenName"], @Session["userName"]?
                </h4>
            </div>


            <div class="form-group">
                <div class="col-md-4">
                    <input type="submit" value="Confirm Order" class="btn btn-default" />

                </div>
            </div>

        </div>
    }

</body>

</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
