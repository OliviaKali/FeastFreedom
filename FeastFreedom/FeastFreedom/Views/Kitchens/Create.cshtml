@model FeastFreedom.Models.Kitchen

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <style>


        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>

    <h2>Register Restaurant</h2>


    @using (Html.BeginForm("Create", "Kitchens", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-2">
                    <h4>Restaurant Name</h4>
                </div>
                @* @Html.LabelFor(model => model.KitchenName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KitchenName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KitchenName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <h4>Restaurant Email</h4>
                </div>
                @*@Html.LabelFor(model => model.KitchenEmail, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KitchenEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KitchenEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <h4>Password</h4>
                </div>
                @*@Html.LabelFor(model => model.KitchenPasswod, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KitchenPasswod, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KitchenPasswod, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <h4>Days Working</h4>
                </div>
                     <div class="col-md-10 inputValues">
                    

                    @Html.CheckBoxFor(model => model.Monday, htmlAttributes: new { })Monday<br />
                    @Html.CheckBoxFor(model => model.Tuesday, htmlAttributes: new { })Tuesday<br />
                    @Html.CheckBoxFor(model => model.Wednesday, htmlAttributes: new { })Wednesday<br />
                    @Html.CheckBoxFor(model => model.Thursday, htmlAttributes: new { })Thursday<br />
                    @Html.CheckBoxFor(model => model.Friday, htmlAttributes: new { })Friday<br />
                    @Html.CheckBoxFor(model => model.Saturday, htmlAttributes: new { })Saturday<br />
                    @Html.CheckBoxFor(model => model.Sunday, htmlAttributes: new { })Sunday<br />

                    @*@Html.EditorFor(model => model.DaysWorking, new { htmlAttributes = new { @class = "form-control ValueSelected" } })
                        @Html.ValidationMessageFor(model => model.DaysWorking, "", new { @class = "text-danger" })*@
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2">
                    <h4>Hours Working</h4>
                </div>
                @*@Html.LabelFor(model => model.HoursWorking, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoursWorking, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoursWorking, "Example 7 am - 7 pm", new { @class = "text-danger" })

                    @* @Html.DropDownListFor(model => model.StartTime, Enumerable.Range(00, 24).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }), "Start Time")*@

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <h4>Image</h4>
                </div>
         
                <div class="col-md-10">
                    <input type="file" name="file" id="file" style="width: 100%;" /> <br />
    
                    @*@Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default submitButton" />
            </div>

            <div class="form-group">
                <a href="https://localhost:44318/" class="btn btn-default">Cancel</a>
            </div>

        </div>
    }

    @*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

    @section Scripts {
        <script src="http://code.jquery.com/jquery-latest.js"></script>
        @Scripts.Render("~/bundles/jqueryval")

        <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    }

</body>
</html>